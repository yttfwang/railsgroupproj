class Api::V1::UsersController < ApplicationController
  // prevents bad posts requests to certain urls to making those requests
  skip_before_filter :verify_authenticity_token

  def index
    users = Users.all
    render json: users
  end

  def create
    user = User.new user_params
    user.save
    render json: user
  end

  private

  def user_params
    params.require(:user).permit(:name, :email)
  end
end

